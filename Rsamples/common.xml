<?xml version="1.0"?>
<!--#OBSOLETE. TO_BE_REMOVED-->
<project name="common" basedir=".">
    <dirname property="common.basedir" file="${ant.file.common}" />

    <property environment="env"/>

    <property file="${common.basedir}/sample.properties"/>
    <property name="jeus.home" value="${env.JEUS_HOME}"/>
    <property name="jeus.port" value="21000"/>

    <path id="jeus.libraries">
		<fileset dir="${jeus.home}/lib/system">
			<include name="**/*.jar"/>
		</fileset>
		<fileset dir="${jeus.home}/lib/datasource">
		   <include name="**/*.jar"/>
		   <include name="**/*.zip"/>
		</fileset>
		<fileset dir="${jeus.home}/lib/application">
		   <include name="**/*.jar"/>
		   <include name="**/*.zip"/>
		</fileset>
		<pathelement path="${jeus.home}/lib/application"/>

		<pathelement path="${build}"/>
	</path>

	<taskdef resource="jeus/util/ant/jeusant.properties">
	   <classpath>
	   	<path refid="jeus.libraries"/>
	   </classpath>
	</taskdef>

    <property name="derby.home" value="${jeus.home}/derby"/>
    <property name="derby.classpath" value="${derby.home}/lib/derbyclient.jar"/>
    <property name="derby.url" value="jdbc:derby://localhost:1527/sample;create=true"/>

</project>
