<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<jeus-ejb-dd xmlns="http://www.tmaxsoft.com/xml/ns/jeus" version="6.0">
    <beanlist>
        <jeus-bean>
            <ejb-name>CustomerBean</ejb-name>
            <export-name>ejb.ejbql.relationQuery</export-name>
            <local-export-name>customerLocal</local-export-name>
            <object-management>
                <bean-pool>
                    <pool-min>6</pool-min>
                    <pool-max>200</pool-max>
                    <resizing-period>1800000</resizing-period>
                </bean-pool>
                <connect-pool>
                    <pool-min>6</pool-min>
                    <pool-max>200</pool-max>
                    <resizing-period>1800000</resizing-period>
                </connect-pool>
                <capacity>2000</capacity>
                <passivation-timeout>100000</passivation-timeout>
                <disconnect-timeout>1800000</disconnect-timeout>
            </object-management>
            <schema-info>
                <table-name>Customer_tbl</table-name>
                <cm-field>
                    <field>id</field>
                </cm-field>
                <cm-field>
                    <field>name</field>
                </cm-field>
                <creating-table>
                    <use-existing-table/>
                </creating-table>
                <deleting-table>true</deleting-table>
                <db-vendor>hsql</db-vendor>
		<data-source-name>datasource2</data-source-name>
            </schema-info>
        </jeus-bean>
        <jeus-bean>
            <ejb-name>ReservationBean</ejb-name>
            <export-name>reservation</export-name>
            <local-export-name>reservationLocal</local-export-name>
            <schema-info>
                <table-name>Reservation_tbl</table-name>
                <cm-field>
                    <field>id</field>
                </cm-field>
                <cm-field>
                    <field>payAmount</field>
                </cm-field>
                <cm-field>
                    <field>reservedDate</field>
                </cm-field>
                <creating-table>
                    <use-existing-table/>
                </creating-table>
                <deleting-table>true</deleting-table>
                <db-vendor>hsql</db-vendor>
                <data-source-name>datasource2</data-source-name>
            </schema-info>
        </jeus-bean>
    </beanlist>
    <ejb-relation-map>
        <relation-name>Customer-Reservation</relation-name>
        <table-name>Customer_Reservation_Link</table-name>
        <jeus-relationship-role>
            <relationship-role-name>Reservation-has-many-Customers</relationship-role-name>
            <column-map>
                <foreign-key-column>reservation</foreign-key-column>
                <target-primary-key-column>id</target-primary-key-column>
            </column-map>
        </jeus-relationship-role>
        <jeus-relationship-role>
            <relationship-role-name>Customer-has-many-Reservations</relationship-role-name>
            <column-map>
                <foreign-key-column>customer</foreign-key-column>
                <target-primary-key-column>id</target-primary-key-column>
            </column-map>
        </jeus-relationship-role>
    </ejb-relation-map>
</jeus-ejb-dd>

