<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<jeus-ejb-dd xmlns="http://www.tmaxsoft.com/xml/ns/jeus" version="6.0">
    <module-info/>
    <beanlist>
        <jeus-bean>
            <ejb-name>mtmtest</ejb-name>
            <export-name>mtm/Test</export-name>
            <database-insert-delay>ejbPostCreate</database-insert-delay>
        </jeus-bean>
        <jeus-bean>
            <ejb-name>Student</ejb-name>
            <export-name>mtm/Student</export-name>
            <local-export-name>local/Student</local-export-name>
            <schema-info>
                <table-name>MTM_STUDENT</table-name>
                <cm-field>
                    <field>number</field>
                    <column-name>ID</column-name>
                </cm-field>
                <creating-table>
                    <use-existing-table/>
                </creating-table>
                <deleting-table>true</deleting-table>
                <db-vendor>hsql</db-vendor>
                <data-source-name>localxa</data-source-name>
            </schema-info>
            <database-insert-delay>ejbPostCreate</database-insert-delay>
        </jeus-bean>
        <jeus-bean>
            <ejb-name>Course</ejb-name>
            <export-name>mtm/Course</export-name>
            <local-export-name>local/Course</local-export-name>
            <schema-info>
                <table-name>MTM_COURSE</table-name>
                <cm-field>
                    <field>code</field>
                    <column-name>COURSE_CODE</column-name>
                </cm-field>
                <cm-field>
                    <field>subject</field>
                    <column-name>COURSE_SUBJECT</column-name>
                </cm-field>
                <creating-table>
                    <use-existing-table/>
                </creating-table>
                <deleting-table>true</deleting-table>
                <db-vendor>hsql</db-vendor>
                <data-source-name>localxa</data-source-name>
            </schema-info>
            <database-insert-delay>ejbPostCreate</database-insert-delay>
        </jeus-bean>
    </beanlist>
    <ejb-relation-map>
        <relation-name>student-course</relation-name>
        <table-name>student_course_join</table-name>
        <jeus-relationship-role>
            <relationship-role-name>CourseRelationshipRole</relationship-role-name>
            <column-map>
                <foreign-key-column>join_course</foreign-key-column>
                <target-primary-key-column>COURSE_CODE</target-primary-key-column>
            </column-map>
        </jeus-relationship-role>
        <jeus-relationship-role>
            <relationship-role-name>StudentRelationshipRole</relationship-role-name>
            <column-map>
                <foreign-key-column>join_student</foreign-key-column>
                <target-primary-key-column>ID</target-primary-key-column>
            </column-map>
        </jeus-relationship-role>
    </ejb-relation-map>
</jeus-ejb-dd>

