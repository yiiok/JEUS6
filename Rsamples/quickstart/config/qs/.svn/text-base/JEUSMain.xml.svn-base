<?xml version="1.0" encoding="UTF-8"?>
<jeus-system xmlns="http://www.tmaxsoft.com/xml/ns/jeus" version="6.0">
    <node>
        <name>qs</name>
        <engine-container>
            <name>container1</name>
	    <command-option>-Djeus.ejb.enable.configDeleteOption=true -Xmx256m -Dcom.sun.aas.instanceRoot=@JEUSDir@/samples/quickstart</command-option>
            <engine-command>
                <type>jms</type>
                <name>engine1</name>
            </engine-command>
            <engine-command>
                <type>ejb</type>
                <name>engine1</name>
                <system-logging>
                    <level>SEVERE</level>
                    <use-parent-handlers>true</use-parent-handlers>
                </system-logging>
            </engine-command>
            <engine-command>
                <type>servlet</type>
                <name>engine1</name>
                <system-logging>
                    <level>SEVERE</level>
                    <use-parent-handlers>true</use-parent-handlers>
                </system-logging>
            </engine-command>
            <sequential-start>true</sequential-start>
            <tm-config>
                <pooling>
                    <min>10</min>
                    <max>20</max>
                    <period>600000</period>
                </pooling>
                <active-timeout>300000</active-timeout>
                <commit-timeout>120000</commit-timeout>
                <capacity>20000</capacity>
            </tm-config>
            <system-logging>
                <level>SEVERE</level>
            </system-logging>
            <invocation-manager-action>AutoClose</invocation-manager-action>
        </engine-container>
        <class-ftp>true</class-ftp>
        <sequential-start>true</sequential-start>
        <enable-webadmin>true</enable-webadmin>
        <system-logging>
            <level>SEVERE</level>
            <handler>
                <console-handler>
                    <name>consoleHandler</name>
                    <level>SEVERE</level>
                </console-handler>
                <file-handler>
                    <name>fileHandler</name>
                    <level>SEVERE</level>
                </file-handler>
            </handler>
        </system-logging>
    </node>
    <resource>
        <data-source>
            <database>
                <vendor>others</vendor>
                <export-name>jdbc/PetstoreDB</export-name>
                <data-source-class-name>org.apache.derby.jdbc.ClientDataSource</data-source-class-name>
                <data-source-type>DataSource</data-source-type>
                <property>
                    <name>ServerName</name>
                    <type>java.lang.String</type>
                    <value>localhost</value>
                </property>
                <property>
                    <name>PortNumber</name>
                    <type>java.lang.Integer</type>
                    <value>1527</value>
                </property>
                <property>
                    <name>DatabaseName</name>
                    <type>java.lang.String</type>
                    <value>petstore</value>
                </property>
                <property>
                    <name>User</name>
                    <type>java.lang.String</type>
                    <value>App</value>
                </property>
                <property>
                    <name>Password</name>
                    <type>java.lang.String</type>
                    <value>App</value>
                </property>
                <property>
                    <name>ConnectionAttributes</name>
                    <type>java.lang.String</type>
                    <value>;create=true</value>
                </property>
            </database>
        </data-source>
    </resource>
    <application>
	<absolute-path>@JEUSDir@/samples/quickstart/applications</absolute-path>
	<name>petstore</name>
	<path>petstore.war</path>
	<deployment-type>COMPONENT</deployment-type>
	<web-component>
	</web-component>
	<deployment-target>
		<all-targets>
		</all-targets>
	</deployment-target>
	<classloading>ISOLATED</classloading>
	<class-ftp-unit>JAR</class-ftp-unit>
    </application>
</jeus-system>
