<?xml version="1.0"?>
<!DOCTYPE jeusmain [
<!ENTITY oracle SYSTEM "@JEUSDir@/config/jeus6/oracle.xml">
<!ENTITY mssql2005 SYSTEM "@JEUSDir@/config/jeus6/mssql2005.xml">
<!ENTITY tibero SYSTEM "@JEUSDir@/config/jeus6/tibero.xml">
]>
<jeus-system xmlns="http://www.tmaxsoft.com/xml/ns/jeus" version="6.0">
    <node>
        <name>jeus6</name>
        <engine-container>
            <name>container1</name>
            <!-- engine container JVM option -->
            <command-option>
                -Djeus.ejb.compiler.mode=batch
                -Xmx256m -XX:MaxPermSize=128m -Djeus.ejb.enable.configDeleteOption=true 
                -Djeus.container.name=jeus6_container1
                -Djeus.servlet.urldecode.cookie=true
                -Djeus.ssl.keypass=1111111 -Djeus.ssl.trustpass=1111111
            </command-option>
            <engine-command>
                <type>jms</type>
                <name>engine1</name>
            </engine-command>
            <engine-command>
                <type>servlet</type>
                <name>engine1</name>
            </engine-command>
            <engine-command>
                <type>ejb</type>
                <name>engine1</name>
            </engine-command>
            <tm-config>
                <pooling>
                    <min>10</min>
                    <max>20</max>
                    <period>600000</period>
                </pooling>
                <active-timeout>300000</active-timeout>
                <commit-timeout>120000</commit-timeout>
                <capacity>20000</capacity>
            </tm-config>
            <enable-interop></enable-interop>
        </engine-container>
        <engine-container>
            <name>container2</name>
            <command-option>
                -Djeus.ejb.enable.configDeleteOption=true
                -Djeus.container.name=jeus6_container2
            </command-option>
            <engine-command>
                <type>ejb</type>
                <name>engine2</name>
            </engine-command>
            <invocation-manager-action>AutoClose</invocation-manager-action>
        </engine-container>
        <class-ftp>true</class-ftp>
        <sequential-start>true</sequential-start>
        <enable-webadmin>true</enable-webadmin>
        <!--
        <session-server>
            <resolution>10000</resolution>
            <session-manager>
                <name>session1</name>
                <passivation-to>600000</passivation-to>
                <removal-to>3000000</removal-to>
                <check-to>1000</check-to>
            </session-manager>
        </session-server>
        -->
        <jmx-manager>
            <jmx-connector>
                <rmi-connector>
                    <export-name>RMIConnector</export-name>
                </rmi-connector>
            </jmx-connector>
            <html-adaptor-port>-1</html-adaptor-port>
        </jmx-manager>
		<!--
        <system-logging>
            <level>FINE</level>
            <handler>
                <file-handler>
                    <name>file-handler1</name>
                    <level>FINE</level>
                </file-handler>
                <console-handler>
                    <name>console-handler1</name>
                    <level>INFO</level>
                </console-handler>
            </handler>
        </system-logging>
		-->
    </node>
    <naming-server>
        <server>
            <export-cos-naming>true</export-cos-naming>
        </server>
    </naming-server>
    <resource>
        <data-source>
            &oracle;
            &mssql2005;
            &tibero;
        </data-source>
    </resource>
    <application>
        <name>rmiServletHandler</name>
        <path>@JEUSDir@/webhome/system_app/rmiServletHandler.war</path>
        <deployment-type>COMPONENT</deployment-type>
        <web-component/>
        <deployment-target>
            <target>
                <engine-container-name>jeus6_container1</engine-container-name>
                <web-context-group>
                    <name>MyGroup</name>
                </web-context-group>
            </target>
        </deployment-target>
    </application>
</jeus-system>