<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.Handler.CreatePage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:Handler Create"/>
        <binding name="helpParameter" value="type"/>        
    </component>

    <component id="wizTabPanel" type="jeus:WizardTabPanel">
        <binding name="tabNames" value="new java.lang.String[]{'create'}"/>
    </component>

    <component id="create" type="Block"/>

    <component id="form" type="jeus:JEUSForm">
        <binding name="title" value="message:Handler.create.title"/>
        <binding name="useDefaultButtons" value="false"/>
    </component>

    <component id="type" type="jeus:ReadOnlyTextField">
        <binding name="label" value="message:Handler.type.label"/>
        <binding name="value" value="type"/>
    </component>

    <component id="name" type="jeus:Field">
        <binding name="field" value="component:nameField"/>
    </component>

    <component id="nameField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:name"/>
        <binding name="translator" value="bean:nameTranslator"/>
        <binding name="validators" value="validators:required,pattern=\w*[%common.exception.0066],$nameValidator"/>
    </component>

    <component id="common_required" type="Block"/>
    <component id="common_advanced" type="Block"/>

    <component id="console_blind" type="jeus:Blind">
        <binding name="title" value="message:common.label.advanced"/>
    </component>

    <component id="file_blind" type="jeus:Blind">
        <binding name="title" value="message:common.label.advanced"/>
    </component>

    <component id="user_blind" type="jeus:Blind">
        <binding name="title" value="message:common.label.advanced"/>
    </component>

    <component id="socket_blind" type="jeus:Blind">
        <binding name="title" value="message:common.label.advanced"/>
    </component>

    <component id="level" type="jeus:Field">
        <binding name="field" value="component:levelField"/>
    </component>

    <component id="levelField" type="jeus:JAXBPropertySelection">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:level"/>
        
        <binding name="model" value="logLevelModel"/>
        <binding name="uppercase" value="true"/>
    </component>

    <component id="encoding" type="jeus:Field">
        <binding name="field" value="component:encodingField"/>
    </component>

    <component id="encodingField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:encoding"/>
    </component>

    <component id="choose" type="contrib:Choose"/>
    <component id="condConsole" type="contrib:When">
        <binding name="condition" value="console"/>
    </component>
    <component id="condFile" type="contrib:When">
        <binding name="condition" value="file"/>
    </component>
    <component id="condSmtp" type="contrib:When">
        <binding name="condition" value="smtp"/>
    </component>
    <component id="condUser" type="contrib:When">
        <binding name="condition" value="user"/>
    </component>
    <component id="condSocket" type="contrib:When">
        <binding name="condition" value="socket"/>
    </component>

    <component id="filter_class" type="jeus:Field">
        <binding name="field" value="component:filter_classField"/>
    </component>

    <component id="filter_classField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:filterClass"/>
    </component>

    <component id="file_name" type="jeus:Field">
        <binding name="field" value="component:file_nameField"/>
    </component>

    <component id="file_nameField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:fileName"/>
    </component>

    <component id="valid" type="jeus:Field">
        <binding name="field" value="component:validField"/>
        <binding name="label" value="message:log.handler.create.valid.label"/>
        <binding name="description" value="message:log.handler.create.valid.description"/>
    </component>

    <component id="validField" type="TextField">
        <binding name="value" value="valid"/>
        <binding name="displayName" value="message:log.handler.create.valid.label"/>
        <binding name="translator" value="translator:number2"/>
        <binding name="validators" value="validators:min=-1"/>
    </component>
    
    <component id="valid_unitField" type="PropertySelection">
        <binding name="value" value="validUnit"/>
        <binding name="model" value="@jeus.tool.webadmin.page.EnumerationSet@getPropertySelectionModel({'Days','Hours','Size'})"/>
    </component>

    <component id="buffer_size" type="jeus:Field">
        <binding name="field" value="component:buffer_sizeField"/>
        <binding name="unit" value="message:common.unit.bytes"/>
    </component>

    <component id="buffer_sizeField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:bufferSize"/>
        <binding name="translator" value="translator:number2"/>
        <binding name="validators" value="validators:min=0"/>
    </component>

    <component id="append" type="jeus:Field">
        <binding name="field" value="component:appendField"/>
    </component>

    <component id="appendField" type="jeus:JAXBCheckbox">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:append"/>
    </component>

    <component id="handler_class" type="jeus:Field">
        <binding name="field" value="component:handler_classField"/>
    </component>

    <component id="handler_classField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:handlerClass"/>
        <binding name="validators" value="validators:required"/>
    </component>

    <component id="handler_property" type="jeus:Field">
        <binding name="label" value="@jeus.tool.webadmin.util.JAXBUtils@getLabel(page, handler, 'handlerProperty')"/>
        <binding name="description" value="@jeus.tool.webadmin.util.JAXBUtils@getDescription(page, handler, 'handlerProperty')"/>
        <binding name="usage" value="message:common.usage.property"/>
        <binding name="field" value="component:handler_propertyField"/>
    </component>

    <component id="handler_propertyField" type="jeus:JAXBTextArea">
        <binding name="parentElement" value="handlerProperty"/>
        <binding name="elementName" value="literal:property"/>
        <binding name="translator" value="bean:propertyTranslator"/>
    </component>

    <component id="formatter_class" type="jeus:Field">
        <binding name="field" value="component:formatter_classField"/>
    </component>

    <component id="formatter_classField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:formatterClass"/>
    </component>

    <component id="formatter_property" type="jeus:Field">
        <binding name="label" value="@jeus.tool.webadmin.util.JAXBUtils@getLabel(page, handler, 'formatterProperty')"/>
        <binding name="description" value="@jeus.tool.webadmin.util.JAXBUtils@getDescription(page, handler, 'formatterProperty')"/>
        <binding name="usage" value="message:common.usage.property"/>
        <binding name="field" value="component:formatter_propertyField"/>
    </component>

    <component id="formatter_propertyField" type="jeus:JAXBTextArea">
        <binding name="parentElement" value="formatterProperty"/>
        <binding name="elementName" value="literal:property"/>
        <binding name="translator" value="bean:propertyTranslator"/>
    </component>

    <component id="smtp_host_address" type="jeus:Field">
        <binding name="field" value="component:smtp_host_addressField"/>
    </component>

    <component id="smtp_host_addressField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:smtpHostAddress"/>
		<binding name="validators" value="validators:required"/>
    </component>

    <component id="from_address" type="jeus:Field">
        <binding name="field" value="component:from_addressField"/>
    </component>

    <component id="from_addressField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:fromAddress"/>
        <binding name="validators" value="validators:required"/>
    </component>

    <component id="to_address" type="jeus:Field">
        <binding name="field" value="component:to_addressField"/>
    </component>

    <component id="to_addressField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:toAddress"/>
        <binding name="validators" value="validators:required"/>
    </component>

    <component id="cc_address" type="jeus:Field">
        <binding name="field" value="component:cc_addressField"/>
    </component>

    <component id="cc_addressField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:ccAddress"/>
    </component>

    <component id="bcc_address" type="jeus:Field">
        <binding name="field" value="component:bcc_addressField"/>
    </component>

    <component id="bcc_addressField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:bccAddress"/>
    </component>

    <component id="send_for_all_messages" type="jeus:Field">
        <binding name="field" value="component:send_for_all_messagesField"/>
    </component>

    <component id="send_for_all_messagesField" type="jeus:JAXBCheckbox">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:sendForAllMessages"/>
    </component>

    <component id="smtp_blind" copy-of="file_blind"/>

    <component id="createOk" type="Submit">
        <binding name="value" value="message:common.label.create"/>
        <binding name="listener" value="listener:onCreateOk"/>
    </component>

    <component id="address" type="jeus:Field">
        <binding name="field" value="component:addressField"/>
    </component>

    <component id="addressField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:address"/>
        <binding name="validators" value="validators:required"/>
    </component>

    <component id="port" type="jeus:Field">
        <binding name="field" value="component:portField"/>
    </component>

    <component id="portField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="handler"/>
        <binding name="elementName" value="literal:port"/>
        <binding name="translator" value="translator:number2"/>
        <binding name="validators" value="validators:required,min=1"/>
    </component>

    <bean name="propertyTranslator" class="jeus.tool.webadmin.component.translator.HandlerPropertyTranslator" lifecycle="none">
        <set name="objectFactoryName" value="literal:jeus.xml.binding.jeusDD.ObjectFactory"/>
    </bean>

    <bean name="nameValidator" class="jeus.tool.webadmin.page.Handler.NameValidator">
        <set name="handlers" value="handlers"/>
    </bean>
    
	<bean name="nameTranslator" class="jeus.tool.webadmin.translator.DefaultStringTranslator">
		<set name="default" value="beans.nameValidator.generateName()"/>
	</bean>    

    <property name="handler" persist="session"/>
    <property name="type" persist="session"/>
    <property name="loggingName" persist="session"/>
</page-specification>
