<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.J2EEApplication.ConfigurationPage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:J2EEApplication Configuration"/>
        
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="@jeus.tool.webadmin.page.PageNames@J2EEAPPLICATION_NAMES"/>
        <binding name="subtabNames" value="(jeusApplicationDdContent == null) ? {'application'} : {'application', 'jeus_application_dd'}"/>
    </component>

    <component id="application" type="Block"/>

    <component id="applicationForm" type="jeus:JEUSForm">
        <binding name="title" value="message:ear.application.title"/>
        <binding name="useDefaultButtons" value="false"/>
    </component>

    <component id="applicationContent" type="Insert">
        <binding name="value" value="applicationContent"/>
    </component>
    
    <component id="jeus_application_dd" type="Block"/>
    
    <component id="jeus_application_ddForm" type="jeus:JEUSForm">
        <binding name="title" value="message:ear.jeus_application_dd.title"/>
        <binding name="useDefaultButtons" value="false"/>
    </component>

    <component id="jeus_application_ddContent" type="Insert">
        <binding name="value" value="jeusApplicationDdContent"/>
    </component>  

</page-specification>
