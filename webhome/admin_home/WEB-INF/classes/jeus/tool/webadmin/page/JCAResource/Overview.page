<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JCAResource.OverviewPage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:JDBC Data Source Overview"/>
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="new java.lang.String[]{'JCAResource_Overview'}"/>
    </component>

    <component id="statisticsForm" type="jeus:JEUSForm">
        <binding name="title" value="title"/>
        <binding name="useDefaultButtons" value="false"/>
    </component>

    <component id="statisticsTable" type="jeus:JEUSTable">
        <binding name="source" value="statsList"/>
        <binding name="columns" value="literal:jca.export.name.label:exportName, jca.pool.connection.label:poolSize, jca.freepool.connection.label:freePoolSize, jca.actions.label"/>
        <binding name="row" value="currentStats"/>
        <binding name="currentPageClass" value="literal:table_current_page"/>
        <binding name="columnsClass" value="literal:table_columns"/>
        <binding name="valuesClass" value="literal:table_values"/>
        <binding name="pagesLinkClass" value="literal:table_pages_link"/>
        <binding name="tableClass" value="literal:table"/>
    </component>

    <component id="enable_disableLink" type="DirectLink">
        <binding name="listener" value="listener:onEnableDisable"/>
        <binding name="parameters" value="currentStats.objectName.canonicalName"/>
    </component>

    <component id="enable_disable" type="Button">
        <binding name="label" value="messages.getMessage('jca.'+(enable ? 'disable' : 'enable')+'.label')"/>
    </component>

    <component id="shrinkLink" type="DirectLink">
        <binding name="listener" value="listener:onShrink"/>
        <binding name="parameters" value="currentStats.objectName.canonicalName"/>
    </component>

    <component id="shrink" type="Button">
        <binding name="label" value="message:jca.shrink.label"/>
        <binding name="disabled" value="!enable"/>
    </component>

    <component id="resyncLink" type="DirectLink">
        <binding name="listener" value="listener:onResync"/>
        <binding name="parameters" value="currentStats.objectName.canonicalName"/>
    </component>

    <component id="resync" type="Button">
        <binding name="label" value="message:jca.resync.label"/>
        <binding name="disabled" value="!enable"/>
    </component>

    <component id="export_name" type="Insert">
        <binding name="value" value="currentStats.exportName"/>
    </component>

    <property name="currentStats"/>
</page-specification>
