<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JMSSessionResource.ConsumersPage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:JMS Session Consumers"/>
        
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="@jeus.tool.webadmin.page.PageNames@JMSSESSIONRESOURCE_NAMES"/>
    </component>

    <component id="consumersForm" type="jeus:JEUSForm">
        <binding name="title" value="message:ssr.consumers.title"/>
        <binding name="useDefaultButtons" value="false"/>
    </component>

    <component id="refreshButton" type="Any">
        <binding name="element" value="literal:input"/>
        <binding name="value" value="message:common.label.refresh"/>
    </component>

    <component id="consumersTable" type="jeus:JEUSTable">
        <binding name="source" value="consumers"/>
        <binding name="columns" value="literal:ssr.consumers.origin.label:origin, ssr.consumers.message.count.label:messageCount, ssr.consumers.expired.message.count.label:expiredMessageCount, ssr.consumers.average.message.wait.time.label:averageMessageWaitTime"/>
        <binding name="row" value="currentView"/>
        <binding name="currentPageClass" value="literal:table_current_page"/>
        <binding name="columnsClass" value="literal:table_columns"/>
        <binding name="valuesClass" value="literal:table_values"/>
        <binding name="pagesLinkClass" value="literal:table_pages_link"/>
        <binding name="tableClass" value="literal:table"/>
    </component>

    <property name="currentView"/>
</page-specification>
