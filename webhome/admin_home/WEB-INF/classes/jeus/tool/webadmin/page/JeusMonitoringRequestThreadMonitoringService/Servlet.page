<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JeusMonitoringRequestThreadMonitoringService.ServletPage">
    <component id="mainBorder" type="jeus:MainBorder">
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="new java.lang.String[]{'JeusMonitoringRequestThreadMonitoringService_Servlet', 'JeusMonitoringRequestThreadMonitoringService_EJB'}"/>
    </component>

    <component id="statisticsForm" type="jeus:JEUSForm">
        <binding name="title" value="message:JeusMonitoringRequestThreadMonitoringService_Servlet.title"/>
        <binding name="useDefaultButtons" value="false"/>
    </component>
    
    <component id="eachThreadPoolMap" type="For">
        <binding name="source" value="threadPoolsMap.keySet()"/>
        <binding name="value" value="threadPoolsKey"/>
    </component>       

    <component id="statisticsTable" type="jeus:JEUSTable">
        <binding name="source" value="threadPools"/>
        <binding name="columns" value="literal:!wls.name.label:name, !wls.all.thread.count.label:allThreadCount, !wls.active.thread.count.label:activeThreadCount, !wls.block.thread.count.label:blockThreadCount, !wls.max.thread.count.label:maxThreadCount, !wls.wait.queue.count.label:waitQueueCount"/>
        <binding name="row" value="currentStats"/>
        <binding name="currentPageClass" value="literal:table_current_page"/>
        <binding name="columnsClass" value="literal:table_columns"/>
        <binding name="valuesClass" value="literal:table_values"/>
        <binding name="pagesLinkClass" value="literal:table_pages_link"/>
        <binding name="tableClass" value="literal:table"/>
        <binding name="showCustomize" value="false"/>
    </component>

    <component id="threadPoolLink" type="ExternalLink">
        <binding name="page" value="literal:JeusMonitoringRequestThreadMonitoringService_ServletThreadPool"/>
        <binding name="parameters" value="currentStats.objectName.canonicalName"/>
    </component>

    <component id="threadPoolName" type="Insert">
        <binding name="value" value="currentStats.name"/>
    </component>

    <component id="refreshButton" type="Any">
        <binding name="element" value="literal:input"/>
        <binding name="value" value="message:common.label.refresh"/>
    </component>

    <property name="currentStats"/>
</page-specification>
