<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JeusMonitoringWebtoBMonitoringService.OverviewPage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:WebtoB Monitoring Overview"/>
        
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="new java.lang.String[]{pageName}"/>
    </component>

    <component id="form" type="jeus:JEUSForm">
        <binding name="title" value="message:wtbmo.overview.title"/>
        <binding name="useDefaultButtons" value="false"/>
    </component>
    
    <component id="wtbLink" type="ExternalLink">
       	<binding name="page" value="literal:JeusMonitoringWebtoBMonitoringService_Frameset"/>
     	<binding name="parameters" value="{objectName, webtoB.toString()}"/>
     	<binding name="renderer" value="bean:popupLinkRenderer"/>
    </component>
    
    <bean name="popupLinkRenderer" class="org.apache.tapestry.contrib.link.PopupLinkRenderer" lifecycle="none">
    	<set name="windowName" value="literal:WebtoBMonitor"/>
    	<set name="features" value="literal:width=1050,height=700,toolbars=no,resizable=yes,scrollbars=yes"/>
    </bean>
  
</page-specification>
