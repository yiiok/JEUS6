<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JeusServiceContextGroup.StatisticsPage">
    <meta key="alternative.page.name" value="JeusServiceContextGroup_Configuration"/>

    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:WebModule Statistics"/>
        
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="@jeus.tool.webadmin.page.PageNames@getCONTEXT_GROUP_NAMES(objectName)"/>
    </component>

    <component id="statisticsForm" type="jeus:JEUSForm">
        <binding name="title" value="message:cgs.webmodule.title"/>
        <binding name="useDefaultButtons" value="false"/>
    </component>

    <component id="statisticsTable" type="jeus:JEUSTable">
        <binding name="source" value="statsList"/>
        <binding name="columns" value="literal:cgs.webmodule.name.label:name, cgs.request.count.label:requestCount.count, cgs.processing.time.label:processingTime.count, cgs.all.session.size.label:allSessionSize.count, cgs.active.session.size.label:activeSessionSize.count, cgs.passivate.session.size.label:passivateSessionSize.count, cgs.local.session.size.label:localSessionSize.count, !cgs.webmodule.actions.label"/>
        <binding name="row" value="currentStats"/>
        <binding name="currentPageClass" value="literal:table_current_page"/>
        <binding name="columnsClass" value="literal:table_columns"/>
        <binding name="valuesClass" value="literal:table_values"/>
        <binding name="pagesLinkClass" value="literal:table_pages_link"/>
        <binding name="tableClass" value="literal:table"/>
    </component>



    <component id="webmoduleLink" type="ExternalLink">
        <binding name="page" value="literal:WebModule_Statistics"/>
        <binding name="parameters" value="currentStats.objectName.canonicalName"/>
    </component>

    <component id="webmoduleName" type="Insert">
        <binding name="value" value="currentStats.name"/>
    </component>

    <component id="reloadLink" type="DirectLink">
        <binding name="listener" value="listener:onContextControl"/>
        <binding name="parameters" value="{'reloadContext', currentStats.objectName}"/>
        
    </component>

    <component id="reload" type="Button">
        <binding name="label" value="message:wms.reload.label"/>
        <binding name="disabled" value="currentStats.terminated == true"/>
    </component>

    <component id="suspendLink" type="DirectLink">
        <binding name="listener" value="listener:onContextControl"/>
        <binding name="parameters" value="{'suspendContext',currentStats.objectName}"/>
    </component>

    <component id="suspend" type="Button">
        <binding name="label" value="message:wms.suspend.label"/>
        
        <binding name="disabled" value="currentStats.state != @jeus.management.j2ee.StateManageable@RUNNING or currentStats.terminated == true"/>
    </component>

    <component id="resumeLink" type="DirectLink">
        <binding name="listener" value="listener:onContextControl"/>
        <binding name="parameters" value="{'resumeContext',currentStats.objectName}"/>
    </component>

    <component id="resume" type="Button">
        <binding name="label" value="message:wms.resume.label"/>
        
        <binding name="disabled" value="currentStats.state != @jeus.management.j2ee.StateManageable@STOPPED or currentStats.terminated == true"/>
    </component>

    <component id="terminateLink" type="DirectLink">
        <binding name="listener" value="listener:onContextControl"/>
        <binding name="parameters" value="{'terminateContext',currentStats.objectName}"/>
    </component>

    <component id="terminate" type="Button">
        <binding name="label" value="message:wms.terminate.label"/>
        <binding name="disabled" value="currentStats.runtimeDeploy == true or currentStats.terminated == true"/>
    </component>

    <component id="restartLink" type="DirectLink">
        <binding name="listener" value="listener:onContextControl"/>
        <binding name="parameters" value="{'restartContext',currentStats.objectName}"/>
    </component>

    <component id="restart" type="Button">
        <binding name="label" value="message:wms.restart.label"/>
        <binding name="disabled" value="currentStats.runtimeDeploy == true "/>
    </component>

    <property name="currentStats"/>

</page-specification>
