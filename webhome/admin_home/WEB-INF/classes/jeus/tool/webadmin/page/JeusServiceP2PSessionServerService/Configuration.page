<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JeusServiceP2PSessionServerService.ConfigurationPage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:P2P Session Server Configuration"/>
        
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="new java.lang.String[]{pageName}"/>
        <binding name="subtabNames" value="{'general', 'thread_pool', 'default_file_db', 'session_router'}"/>
    </component>

    <component id="general" type="Block"/>
    <component id="thread_pool" type="Block"/>
    <component id="default_file_db" type="Block"/>
    <component id="session_router" type="Block"/>


    <component id="generalForm" type="jeus:JEUSForm">
        <binding name="title" value="message:p2p.general.title"/>
        <binding name="useDefaultButtons" value="false"/>
        <!--
        <binding name="success" value="listener:onGeneralOk"/>
        <binding name="refresh" value="listener:onResetP2PSession"/>
        -->
    </component>

    <component id="ok" type="Submit">
        <binding name="value" value="message:session.config.ok.label"/>
        <binding name="message" value="message:p2p.ok.confirm"/>
        <binding name="listener" value="listener:onGeneralOk"/>
    </component>

    <component id="cancel" type="Any">
        <binding name="type" value="literal:reset"/>
        <binding name="value" value="message:session.config.cancel.label"/>
    </component>

	<component id="general_reset" type="Submit">
        <binding name="value" value="message:JEUSForm.dissolution.label"/>
        <binding name="message" value="message:JEUSForm.dissolution.confirm"/>
        <binding name="listener" value="listener:onResetP2PSession"/>
    </component>

    <component id="connect_timeout" type="jeus:Field">
        <binding name="field" value="component:connect_timeoutField"/>
        <binding name="unit" value="message:common.unit.msec"/>
    </component>

    <component id="connect_timeoutField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="sessionServer"/>
        <binding name="elementName" value="literal:connectTimeout"/>
        <binding name="translator" value="translator:number2,valueType=Long"/>
        <binding name="validators" value="validators:min=1"/>
    </component>

    <component id="read_timeout" type="jeus:Field">
        <binding name="field" value="component:read_timeoutField"/>
        <binding name="unit" value="message:common.unit.msec"/>
    </component>

    <component id="read_timeoutField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="sessionServer"/>
        <binding name="elementName" value="literal:readTimeout"/>
        <binding name="translator" value="translator:number2,valueType=Long"/>
        <binding name="validators" value="validators:min=1"/>
    </component>

    <component id="backup_trigger" type="jeus:Field">
        <binding name="field" value="component:backup_triggerField"/>
        <binding name="unit" value="message:common.unit.number"/>
    </component>

    <component id="backup_triggerField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="sessionServer"/>
        <binding name="elementName" value="literal:backupTrigger"/>
        <binding name="translator" value="translator:number2"/>
        <binding name="validators" value="validators:min=1"/>
    </component>

    <component id="check_to" type="jeus:Field">
        <binding name="field" value="component:check_toField"/>
        <binding name="unit" value="message:common.unit.msec"/>
    </component>

    <component id="check_toField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="sessionServer"/>
        <binding name="elementName" value="literal:checkTo"/>
        <binding name="translator" value="translator:number2,valueType=Long"/>
        <binding name="validators" value="validators:min=1"/>
    </component>

    

    <component id="check_level" type="jeus:Field">
        <binding name="field" value="component:check_levelField"/>
    </component>

    <component id="check_levelField" type="jeus:JAXBPropertySelection">
        <binding name="model" value="@jeus.tool.webadmin.page.EnumerationSet@getEnumPropertySelectionModel(@jeus.xml.binding.jeusDD.CheckLevelType@class)"/>
        <binding name="parentElement" value="sessionServer"/>
        <binding name="elementName" value="literal:checkLevel"/>
    </component>

<!--    <component id="use_nio" type="jeus:Field">
        <binding name="field" value="component:use_nioField"/>
    </component>

    <component id="use_nioField" type="jeus:JAXBCheckbox">
        <binding name="parentElement" value="sessionServer"/>
        <binding name="elementName" value="literal:useNio"/>
    </component>-->

    <component id="thread_poolForm" type="jeus:JEUSForm">
        <binding name="title" value="message:p2p.thread_pool.title"/>
        <binding name="success" value="listener:onThreadPoolOk"/>
    </component>

    <component id="min" type="jeus:Field">
        <binding name="field" value="component:minField"/>
    </component>

    <component id="minField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="threadPool"/>
        <binding name="elementName" value="literal:min"/>
        <binding name="translator" value="translator:number2"/>
        <binding name="validators" value="validators:min=1"/>
    </component>

    <component id="max" type="jeus:Field">
        <binding name="field" value="component:maxField"/>
    </component>

    <component id="maxField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="threadPool"/>
        <binding name="elementName" value="literal:max"/>
        <binding name="validators" value="validators:$maxValidator"/>
    </component>

    <bean name="maxValidator" class="jeus.tool.webadmin.validator.FieldMinMaxValidator">
        <set name="minField" value="component:minField"/>
        <set name="min" value="1"/>
    </bean>
    
    <component id="period" type="jeus:Field">
        <binding name="field" value="component:periodField"/>
        <binding name="unit" value="message:common.unit.msec"/>
    </component>

    <component id="periodField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="threadPool"/>
        <binding name="elementName" value="literal:period"/>
        <binding name="translator" value="translator:number2,valueType=Long"/>
        <binding name="validators" value="validators:min=1"/>
    </component>

    <component id="default_file_dbForm" type="jeus:JEUSForm">
        <binding name="title" value="message:p2p.default_file_db.title"/>
        <binding name="success" value="listener:onDefaultFileDbOk"/>
        <binding name="refresh" value="listener:onDefaultFileDbReset"/>
    </component>

    <component id="startup_clear_to" type="jeus:Field">
        <binding name="field" value="component:startup_clear_toField"/>
        <binding name="unit" value="message:common.unit.msec"/>
    </component>

    <component id="startup_clear_toField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="defaultFileDb"/>
        <binding name="elementName" value="literal:startupClearTo"/>
        <binding name="translator" value="translator:number2,valueType=Long"/>
        <binding name="validators" value="validators:min=1"/>
    </component>

    <component id="path" type="jeus:Field">
        <binding name="field" value="component:pathField"/>
    </component>

    <component id="pathField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="defaultFileDb"/>
        <binding name="elementName" value="literal:path"/>
    </component>

    <component id="passivation_to" type="jeus:Field">
        <binding name="field" value="component:passivation_toField"/>
        <binding name="unit" value="message:common.unit.msec"/>
    </component>

    <component id="passivation_toField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="defaultFileDb"/>
        <binding name="elementName" value="literal:passivationTo"/>
        <binding name="translator" value="translator:number2,valueType=Long"/>
        <binding name="validators" value="validators:min=-1"/>
    </component>

    <component id="min_hole" type="jeus:Field">
        <binding name="field" value="component:min_holeField"/>
    </component>

    <component id="min_holeField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="defaultFileDb"/>
        <binding name="elementName" value="literal:minHole"/>
        <binding name="translator" value="translator:number2"/>
        <binding name="validators" value="validators:min=1"/>
    </component>

    <component id="packing_rate" type="jeus:Field">
        <binding name="field" value="component:packing_rateField"/>
    </component>

    <component id="packing_rateField" type="jeus:JAXBTextField">
        <binding name="parentElement" value="defaultFileDb"/>
        <binding name="elementName" value="literal:packingRate"/>
        <binding name="translator" value="translator:number2,valueType=Float"/>
        <binding name="validators" value="validators:min=0.0,max=1.0"/>
    </component>
	
	<!--  -->
	
    <component id="session_routerForm" type="jeus:JEUSForm">
        <binding name="title" value="message:p2p.session_router.title"/>
        <binding name="useForm" value="false"/>
    </component>

    <component id="engine_name_column" type="Insert">
        <binding name="value" value="message:p2p.session_router.engine_name.label"/>
    </component>

    <component id="location_column" type="Insert">
        <binding name="value" value="message:p2p.session_router.location.label"/>
    </component>

    <component id="replication_group_column" type="Insert">
        <binding name="value" value="message:p2p.session_router.replication_group.label"/>
    </component>
    
    <component id="backup_group_column" type="Insert">
        <binding name="value" value="message:p2p.session_router.backup_group.label"/>
    </component>    

    <component id="eachSessionRouter" type="For">
        <binding name="source" value="sessionRouters"/>
        <binding name="value" value="sessionRouter"/>
        <binding name="element" value="literal:tr"/>
    </component>

    <component id="sessionRouterLink" type="ExternalLink">
        <binding name="page" value="literal:JeusServiceSessionRouter_Configuration"/>
        <binding name="parameters" value="sessionRouter.objectName.canonicalName"/>
    </component>

    <component id="deleteLink" type="DirectLink">
        <binding name="parameters" value="sessionRouter.engineName"/>
        <binding name="listener" value="listener:onDeleteSessionRouter"/>
        <binding name="renderer" value="@jeus.tool.webadmin.component.render.ConfirmLinkRenderer@build('common.message.delete.confirm', sessionRouter.engineName)"/>
    </component>


    <component id="delete" type="Image">
        <binding name="image" value="asset:delete"/>
    </component>

    <component id="engine_name_value" type="Insert">
        <binding name="value" value="sessionRouter.engineName"/>
    </component>

    <component id="location_value" type="Insert">
        <binding name="value" value="sessionRouter.location"/>
    </component>

    <component id="replication_group_value" type="Insert">
        <binding name="value" value="sessionRouter.replicationGroup"/>
    </component>

    <component id="backup_group_value" type="Insert">
        <binding name="value" value="sessionRouter.backupGroup"/>
    </component>    

    <component id="createSessionRouterLink" type="ExternalLink">
        <binding name="page" value="literal:JeusServiceSessionRouter_Create"/>
        <binding name="parameters" value="{objectName.canonicalName, 'New'}"/>
    </component>

    <component id="createSessionRouter" type="Insert">
        <binding name="value" value="message:p2p.session_router.create.label"/>
    </component>

	<!--  -->
    <asset name="delete" path="context:/image/table/delete.gif"/>
    
    <property name="sessionRouter"/>
</page-specification>
