    <component id="inuseConnectionCount" type="jeus:CountStatisticField">
        <binding name="label" value="message:sc.statistics.inuse_connection_count.label"/>
        <binding name="count" value="stats.inuseConnectionCount"/>
        <binding name="unit" value="message:common.unit.number"/>
    </component>

    <component id="passivatedSessionCount" type="jeus:CountStatisticField">
        <binding name="label" value="message:sc.statistics.passivated_session_count.label"/>
        <binding name="count" value="stats.passivatedSessionCount"/>
        <binding name="renderUnderline" value="true"/>
        <binding name="unit" value="message:common.unit.number"/>
    </component>
    <component id="localFileDbSize" type="jeus:CountStatisticField">
        <binding name="label" value="message:sc.statistics.local_file_db_size.label"/>
        <binding name="count" value="stats.localFileDbSize"/>
        <binding name="renderUnderline" value="true"/>
        <binding name="unit" value="message:common.unit.bytes"/>
    </component>
    <component id="backupSessionCount" type="jeus:CountStatisticField">
        <binding name="label" value="message:sc.statistics.backup_session_count.label"/>
        <binding name="count" value="stats.backupSessionCount"/>
        <binding name="renderUnderline" value="true"/>
        <binding name="unit" value="message:common.unit.number"/>
    </component>

    <component id="passivatedBackupSessionCount" type="jeus:CountStatisticField">
        <binding name="label" value="message:sc.statistics.passivated_backup_session_count.label"/>
        <binding name="count" value="stats.passivatedBackupSessionCount"/>
        <binding name="renderUnderline" value="true"/>
        <binding name="unit" value="message:common.unit.number"/>
    </component>

    <component id="backupFileDbSize" type="jeus:CountStatisticField">
        <binding name="label" value="message:sc.statistics.backup_file_db_size.label"/>
        <binding name="count" value="stats.backupFileDbSize"/>
        <binding name="renderUnderline" value="true"/>
        <binding name="unit" value="message:common.unit.bytes"/>
    </component>

    <component id="connectionCount" type="jeus:CountStatisticField">
        <binding name="label" value="message:sc.statistics.connection_count.label"/>
        <binding name="count" value="stats.connectionCount"/>
        <binding name="unit" value="message:common.unit.number"/>
    </component>

    <component id="refreshButton" type="Any">
        <binding name="element" value="literal:input"/>
        <binding name="value" value="message:common.label.refresh"/>
    </component>

    <component id="serverName" type="jeus:ReadOnlyTextField">
        <binding name="label" value="message:sc.statistics.serverName.label"/>
        <binding name="value" value="distributeServerName"/>
    </component>

    <component id="backupName" type="jeus:ReadOnlyTextField">
        <binding name="label" value="message:sc.statistics.backupName.label"/>
        <binding name="value" value="distributeBackupName"/>
    </component>

    <component id="primaryServerName" type="jeus:ReadOnlyTextField">
        <binding name="label" value="message:sc.statistics.primaryServerName.label"/>
        <binding name="value" value="centralPrimaryName"/>
    </component>

    <component id="backupServerName" type="jeus:ReadOnlyTextField">
        <binding name="label" value="message:sc.statistics.centralServerName.label"/>
        <binding name="value" value="centralBackupName"/>
    </component>

    <component id="currentSessionServer" type="jeus:ReadOnlyTextField">
        <binding name="label" value="message:sc.statistics.centralCurrentServerName.label"/>
        <binding name="value" value="currentName"/>
    </component>
</page-specification>
