<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JeusServiceSessionServerService.StatisticsPage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:EJB Monitor"/>

    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="new java.lang.String[]{'JeusServiceSessionServerService_Configuration', 'JeusServiceSessionServerService_Statistics'}"/>
    </component>

    <component id="form" type="jeus:JEUSForm">
        <binding name="title" value="message:ss.statistics.title"/>
        <binding name="useDefaultButtons" value="false"/>
    </component>

    <component id="totalSessionMemory" type="jeus:CountStatisticField">
        <binding name="label" value="message:ss.statistics.total_session_memory.label"/>
        <binding name="count" value="stats.totalSessionMemory"/>
        <binding name="unit" value="message:common.unit.bytes"/>
    </component>

    <component id="sessionPeakMemory" type="jeus:CountStatisticField">
        <binding name="label" value="message:ss.statistics.session_peak_memory.label"/>
        <binding name="count" value="stats.sessionPeakMemory"/>
        <binding name="unit" value="message:common.unit.bytes"/>
    </component>

    <component id="passivatedSessionCount" type="jeus:CountStatisticField">
        <binding name="label" value="message:ss.statistics.passivatedSessionCount.label"/>
        <binding name="count" value="stats.passivatedSessionCount"/>
        <binding name="unit" value="message:common.unit.number"/>
    </component>

    <component id="totalSessionCount" type="jeus:CountStatisticField">
        <binding name="label" value="message:ss.statistics.totalSessionCount.label"/>
        <binding name="count" value="stats.totalSessionCount"/>
        <binding name="unit" value="message:common.unit.number"/>
    </component>

    <component id="memory1MinuteDifference" type="jeus:CountStatisticField">
        <binding name="label" value="message:ss.statistics.memory_1minute_difference.label"/>
        <binding name="count" value="stats.memory1MinuteDifference"/>
        <binding name="unit" value="message:common.unit.bytes"/>
    </component>

    <component id="memory5MinuteDifference" type="jeus:CountStatisticField">
        <binding name="label" value="message:ss.statistics.memory_5minute_difference.label"/>
        <binding name="count" value="stats.memory5MinuteDifference"/>
        <binding name="unit" value="message:common.unit.bytes"/>
    </component>

    <component id="memory15MinuteDifference" type="jeus:CountStatisticField">
        <binding name="label" value="message:ss.statistics.memory_15minute_difference.label"/>
        <binding name="count" value="stats.memory15MinuteDifference"/>
        <binding name="unit" value="message:common.unit.bytes"/>
    </component>

    <component id="refreshButton" type="Any">
        <binding name="element" value="literal:input"/>
        <binding name="value" value="message:common.label.refresh"/>
    </component>

    <component id="exist" type="If">
        <binding name="condition" value="exist"/>
        <binding name="renderTag" value="false"/>
    </component>

    <component id="noSession" type="Insert">
        <binding name="value" value="message:ss.statistics.nosession.label"/>
    </component>
</page-specification>
