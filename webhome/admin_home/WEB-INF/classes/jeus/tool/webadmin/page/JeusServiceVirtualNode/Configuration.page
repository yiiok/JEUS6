<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JeusServiceVirtualNode.ConfigurationPage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:Virtual Node Configuration"/>
        
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="@jeus.tool.webadmin.page.PageNames@JEUSSERVICE_VIRTUALNODE_NAMES"/>
    </component>

    <component id="vnodeForm" type="jeus:JEUSForm">
        <binding name="title" value="message:vnode.title"/>
        <binding name="useDefaultButtons" value="false"/>
        
    </component>

    <component id="ok" type="Submit">
        <binding name="value" value="message:JEUSForm.ok.label"/>
        <binding name="message" value="message:vnode.node.message"/>
        <binding name="listener" value="listener:onOk"/>
    </component>

    <component id="cancel" type="Any">
        <binding name="type" value="literal:reset"/>
        <binding name="value" value="message:JEUSForm.cancel.label"/>
    </component>

    <component id="node" type="jeus:Field">
        <binding name="field" value="component:nodeField"/>
        <binding name="description" value="message:vnode.node.description"/>
        <binding name="label" value="message:vnode"/>
    </component>

    <component id="nodeField" type="TextArea">
        <binding name="value" value="content"/>
        <binding name="disabled" value="!@jeus.tool.webadmin.hivemind.Lock@isEnabledEdit(getSettings(), getVisit())"/>
    </component>

</page-specification>
