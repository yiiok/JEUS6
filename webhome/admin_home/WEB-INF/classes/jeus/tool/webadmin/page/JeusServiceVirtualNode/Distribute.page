<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JeusServiceVirtualNode.DistributePage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:Distribute vhost.xml"/>
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="@jeus.tool.webadmin.page.PageNames@JEUSSERVICE_VIRTUALNODE_NAMES"/>
    </component>

    <component id="distributeForm" type="jeus:JEUSForm">
        <binding name="title" value="message:vnode.distribute.title"/>
        <binding name="success" value="listener:onOk"/>
        <binding name="useDefaultButtons" value="model.nodeNames.length &gt; 0"/>
    </component>

    <component id="targetsField" type="jeus:TargetExplorer">
        <binding name="label" value="message:jm.distribute.targets.label"/>
        <binding name="model" value="model"/>
        <binding name="selectionModel" value="selectionModel"/>
        <binding name="noTargetMessage" value="message:dwc.unavailable.label"/>
        <binding name="disabled" value="!@jeus.tool.webadmin.hivemind.Lock@isEnabledEdit(getSettings(), getVisit())"/>
    </component>

</page-specification>
