<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE page-specification PUBLIC "-//Apache Software Foundation//Tapestry Specification 4.0//EN" "http://jakarta.apache.org/tapestry/dtd/Tapestry_4_0.dtd">
<page-specification class="jeus.tool.webadmin.page.JeusServiceWebEngine.ConfigurationPage">
    <component id="mainBorder" type="jeus:MainBorder">
        <binding name="title" value="literal:Context Group"/>
        
    </component>

    <component id="tabPanel" type="jeus:TabPanel">
        <binding name="pageNames" value="@jeus.tool.webadmin.page.PageNames@JEUSSERVICE_WEBENGINE_NAMES"/>
    </component>

    <component id="context_groupForm" type="jeus:JEUSForm">
        <binding name="title" value="message:wec.context_group.title"/>
        <binding name="useDefaultButtons" value="false"/>
        <binding name="enableLayout" value="false"/>
    </component>

    <component id="eachContextGroup" type="For">
        <binding name="source" value="contextGroupViews"/>
        <binding name="value" value="cgValue"/>
        <binding name="element" value="literal:tr"/>
    </component>

    <component id="group_name_column" type="Insert">
        <binding name="value" value="message:wec.context_group.group_name_column.label"/>
    </component>



    <component id="actions_column" type="Insert">
        <binding name="value" value="message:wec.context_group.actions_column.label"/>
    </component>

    <component id="group_name_value" type="Insert">
        <binding name="value" value="cgValue.name"/>
    </component>



    <component id="condStopped" type="If">
        <binding name="condition" value="cgValue.objectName.domain == 'XML'"/>
    </component>

    <component id="deleteContextGroupLink" type="DirectLink">
        <binding name="parameters" value="cgValue.name"/>
        <binding name="listener" value="listener:onDeleteContextGroup"/>
        <binding name="renderer" value="@jeus.tool.webadmin.component.render.ConfirmLinkRenderer@build('common.message.delete.confirm', cgValue.name)"/>
    </component>

    <component id="delete" type="Image">
        <binding name="image" value="asset:delete"/>
    </component>


    <component id="contextGroupLink" type="ExternalLink">
        <binding name="page" value="literal:JeusServiceContextGroup_Configuration"/>
        <binding name="parameters" value="cgValue.objectName.canonicalName"/>
    </component>

    <component id="createContextGroupLink" type="ExternalLink">
        <binding name="page" value="literal:JeusServiceContextGroup_Create"/>
        <binding name="parameters" value="{objectName.canonicalName, 'New'}"/>
    </component>

    <component id="suspendLink" type="DirectLink">
        <binding name="listener" value="listener:onContextGroupControl"/>
        <binding name="parameters" value="{'suspendContextGroup', cgValue.name}"/>
    </component>

    <component id="suspend" type="Button">
        <binding name="label" value="message:wms.suspend.label"/>
        <binding name="disabled" value="cgValue.objectName.domain == 'XML' or @jeus.management.j2ee.StateManageable@STOPPED == getContextGroupState(cgValue.objectName)"/>        
    </component>

    <component id="resumeLink" type="DirectLink">
        <binding name="listener" value="listener:onContextGroupControl"/>
        <binding name="parameters" value="{'resumeContextGroup',cgValue.name}"/>
    </component>

    <component id="resume" type="Button">
        <binding name="label" value="message:wms.resume.label"/>
        <binding name="disabled" value="cgValue.objectName.domain == 'XML' or @jeus.management.j2ee.StateManageable@RUNNING == getContextGroupState(cgValue.objectName)"/>        
    </component>

    <component id="terminateLink" type="DirectLink">
        <binding name="listener" value="listener:onContextGroupControl"/>
        <binding name="parameters" value="{'terminateContextGroup',cgValue.name}"/>
    </component>

    <component id="terminate" type="Button">
        <binding name="label" value="message:wms.terminate.label"/>
		<binding name="disabled" value="cgValue.objectName.domain == 'XML' or cgValue.existRuntimeModules == true"/>        
    </component>

    <component id="restartLink" type="DirectLink">
        <binding name="listener" value="listener:onContextGroupControl"/>
        <binding name="parameters" value="{'restartContextGroup', cgValue.name}"/>
    </component>

    <component id="restart" type="Button">
        <binding name="label" value="message:wms.restart.label"/>
		<binding name="disabled" value="cgValue.existRuntimeModules == true"/>        
    </component>

    <component id="createContextGroup" type="Insert">
        <binding name="value" value="message:wlc.context_group.create.label"/>
    </component>

    <property name="cgValue"/>

    <asset name="delete" path="context:/image/table/delete.gif"/>

</page-specification>
